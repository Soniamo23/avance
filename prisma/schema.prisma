// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//definicion del cliente 
model Customer{
  id Int    @id @default(autoincrement())
  name      String
  address   String
  number       String
}


//definicion de factura
model Billing{
  id Int    @id @default(autoincrement())
  date  DateTime
  pay   Float
}


//descripcion de producto

model  Product {
  id          Int     @id @default(autoincrement())
  description String
  price       Float
  amountn       Int
}


//totales
model  Total {
  customerId   Int     
  billId      Int     @unique
  totalAmount Float
}


//descripcion de pago 
model  Payment {
  id            Int     @id @default(autoincrement())
  paymentDate   DateTime
  paymentMethod String
}




